<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginDispatcher">

    <fragment
        android:id="@+id/homeFragment"
        android:name="ch.ffhs.conscious_pancake.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="user_id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/loginDispatcher"
        android:name="ch.ffhs.conscious_pancake.ui.login_dispatcher.LoginDispatcherFragment"
        android:label="LoginDispatcher" >
        <action
            android:id="@+id/action_loginDispatcher_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginDispatcher_to_loginActivity"
            app:destination="@id/loginActivity" />
    </fragment>
    <activity
        android:id="@+id/loginActivity"
        android:name="ch.ffhs.conscious_pancake.ui.auth.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
</navigation>